{
  "name": "atomic-layout",
  "version": "0.3.1",
  "description": "A single component to distribute a spacial relation in your layouts using CSS Grid.",
  "main": "./index.js",
  "scripts": {
    "start": "start-storybook -p 6020",
    "dev": "NODE_ENV=development webpack --watch",
    "build": "webpack",
    "cypress": "node_modules/.bin/cypress open",
    "examples": "webpack-dev-server --config examples/webpack.config.js",
    "flow": "node_modules/.bin/flow",
    "test:unit": "BABEL_ENV=test jest",
    "cypress:cli": "node_modules/.bin/cypress run --spec cypress/integration/index.js",
    "test:e2e": "server-test examples http-get://localhost:9987 cypress:cli",
    "test": "npm run test:unit && npm run test:e2e",
    "prettify": "node_modules/.bin/prettier 'src/**/*.js' --write",
    "prepublishOnly": "npm run build && npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint ./src/",
      "pre-push": [
        "npm run test:unit",
        "npm run prettify"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kettanaito/atomic-layout"
  },
  "author": {
    "name": "Artem Zakharchenko",
    "email": "kettanaito@gmail.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "styled-components": "^3.0.0"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^1.1.3",
    "@storybook/addon-actions": "^3.4.7",
    "@storybook/addon-links": "^3.4.7",
    "@storybook/react": "^3.4.7",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^7.1.4",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "cypress": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.54.1",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.1.0",
    "pre-push": "^0.1.1",
    "prettier": "^1.13.5",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.3.1",
    "start-server-and-test": "^1.4.1",
    "storybook": "^1.0.0",
    "styled-components": "^3.2.6",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.2"
  },
  "dependencies": {
    "react-responsive": "^4.1.0"
  }
}
