{
  "name": "atomic-layout",
  "version": "0.4.0",
  "description": "A single component to distribute a spacial relation in your layouts using CSS Grid.",
  "keywords": [
    "atomic",
    "layout",
    "responsive",
    "composition",
    "css grid",
    "react"
  ],
  "author": {
    "name": "Artem Zakharchenko",
    "email": "kettanaito@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kettanaito/atomic-layout"
  },
  "main": "./index.js",
  "scripts": {
    "start": "start-storybook -p 6020",
    "dev": "cross-env NODE_ENV=development webpack --watch",
    "build": "webpack",
    "cypress": "node_modules/.bin/cypress open",
    "examples": "webpack-dev-server --config examples/webpack.config.js",
    "flow": "node_modules/.bin/flow",
    "test:unit": "cross-env BABEL_ENV=test jest",
    "cypress:cli": "node_modules/.bin/cypress run --spec cypress/integration/index.js --browser chrome",
    "test:e2e": "server-test examples http-get://localhost:9987 cypress:cli",
    "test": "npm run test:unit && npm run test:e2e",
    "postinstall": "npm run build",
    "precommit": "lint-staged",
    "prepush": "npm run test:unit",
    "prepublishOnly": "npm run build && npm test"
  },
  "lint-staged": {
    ".{js,jsx}": [
      "eslint ./src/",
      "prettier --write",
      "git add"
    ]
  },
  "bundlesize": [
    {
      "path": "./index.js",
      "maxSize": "8 kB"
    }
  ],
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "styled-components": "^3.0.0"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^1.1.3",
    "@storybook/addon-actions": "^4.0.0-alpha.22",
    "@storybook/addon-links": "^4.0.0-alpha.22",
    "@storybook/react": "^4.0.0-alpha.22",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "bundlesize": "^0.17.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cypress": "^3.0.3",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-flowtype": "^2.50.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.78.0",
    "husky": "^1.0.0-rc.9",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-router-dom": "^4.3.1",
    "start-server-and-test": "^1.7.1",
    "storybook": "^1.0.0",
    "styled-components": "^3.4.9",
    "url": "^0.11.0",
    "webpack": "^4.20.0",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.9"
  },
  "dependencies": {
    "react-responsive": "^5.0.0"
  }
}
