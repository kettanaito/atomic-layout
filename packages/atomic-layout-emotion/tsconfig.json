{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es6",
    "target": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "lib/types",
    "noImplicitThis": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".",
    "types": ["jest"],
    "rootDirs": ["src", "../atomic-layout/src"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
